{
  "name": "learn-mongo-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack application with MongoDB backend and Next.js frontend",
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:web": "pnpm --filter web dev",
    "dev:viteweb": "pnpm --filter viteweb dev",
    "build": "pnpm run --recursive build",
    "build:backend": "pnpm --filter backend build",
    "build:web": "pnpm --filter web build",
    "build:viteweb": "pnpm --filter viteweb build",
  
    "install:all": "pnpm install",
    "clean": "pnpm run --recursive clean",
    "type-check": "pnpm run --recursive type-check",
    "info": "node workspace-info.js"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  }
}
